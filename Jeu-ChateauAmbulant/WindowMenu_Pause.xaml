<Window x:Class="Jeu_ChateauAmbulant.WindowMenu_Pause"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jeu_ChateauAmbulant"
        mc:Ignorable="d"
        Title="WindowMenu_Pause" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="/images/image_Fond.png"/>
    </Window.Background>
    <Grid>

        <Button x:Name="boutQuitter" Content="" HorizontalAlignment="Left" Margin="320,332,0,0" VerticalAlignment="Top" Width="180" Height="55" Click="Button_Click">
            <Button.Background>
                <ImageBrush ImageSource="/images/bouton_quitter.png"/>
            </Button.Background>
        </Button>

        <Button x:Name="boutton_reprendre" Content="" HorizontalAlignment="Left" Margin="320,251,0,0" VerticalAlignment="Top" Width="180" Height="55" Click="boutton_reprendre_Click">
            <Button.Background>
                <ImageBrush ImageSource="/images/bouton_reprendre.png"/>
            </Button.Background>
        </Button>
        
        <Label Content="" HorizontalAlignment="Left" Margin="210,43,0,0" VerticalAlignment="Top" Width="400" Height="150" FontSize="90" FontFamily="Impact" Foreground="#FF797979">
            <Label.Background>
                <ImageBrush ImageSource="/images/label_pause.png"/>
            </Label.Background>
        </Label>
        
    </Grid>
</Window>
