<Window x:Name="ZoneJeu" x:Class="Jeu_ChateauAmbulant.WindowJeu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jeu_ChateauAmbulant"
        mc:Ignorable="d"
        Title="WindowJeu" Height="800" Width="1200">

	<Grid>
		<Canvas x:Name="Canva_Jeu">

			<Image x:Name="Background1" Height="780" Canvas.Left="0" Source="\images\image_Fond.png" Stretch="Fill" Width="1600"/>
			<Image x:Name="Background2" Height="780" Canvas.Left="1600" Source="\images\image_Fond.png" Stretch="Fill" Width="1600"/>

			<Image x:Name="chateau1" Source="/images/imgChateau1.gif" Canvas.Left="148" Canvas.Top="193" Height="527" Width="449" HorizontalAlignment="Left" VerticalAlignment="Top" />

			<Button x:Name="ButPause" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Width="122" Height="50" Canvas.Left="978" Canvas.Top="64" Click="ButPause_Click">
				<Button.Background>
					<ImageBrush ImageSource="/images/bouton_pause.png" />
				</Button.Background>
			</Button>

			<Image x:Name="thermometres" HorizontalAlignment="Center" Height="100" VerticalAlignment="Top" Width="39" Source="/images/thermometre_1.png" Canvas.Left="107" Canvas.Top="143">
				<Image.OpacityMask>
					<ImageBrush ImageSource="/images/thermometre_1.png"/>
				</Image.OpacityMask>
			</Image>

			<Button x:Name="bouton_temperature" Content="" Canvas.Left="49" Canvas.Top="78" Height="50" Width="155" HorizontalAlignment="Center" VerticalAlignment="Top" Click="bouton_temperature_Click" Style ="{StaticResource BoutonImmobile}" >
				<Button.Background>
					<ImageBrush ImageSource="/images/bouton_température.png"/>
				</Button.Background>

			</Button>

            <Label x:Name="label_chrono" Content="" Canvas.Left="719" Canvas.Top="143" Background="{x:Null}" Foreground="White" FontSize="16"/>

			<Image x:Name="img_avion" Source="/images/avion.png" Stretch="Fill" Canvas.Left="2890" Canvas.Top="-90" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.65,0.466"/>

			<Image x:Name="img_bombe" Height="110" Source="/images/bombe.png" Stretch="Fill"  Width="99" Visibility="Hidden"/>
			<Image x:Name="img_corbeau" Source="/images/corbeau.png" Stretch="Fill" Canvas.Left="3007" Canvas.Top="320" Height="140" Width="159"/>
			<Label x:Name="label_fin" Content="" Canvas.Left="695" Canvas.Top="211" Height="152" Width="344" FontSize="90" HorizontalAlignment="Left" VerticalAlignment="Top">
				<Label.Background>
					<ImageBrush ImageSource="/images/image_fin_gagne.png"/>
				</Label.Background>
			</Label>

			<Button x:Name="bouton_rejouer" Content="" Canvas.Left="702" Canvas.Top="456" Height="94" Width="245" FontSize="50" Click="bouton_rejouer_Click" HorizontalAlignment="Center" VerticalAlignment="Top">
				<Button.Background>
					<ImageBrush ImageSource="/images/bouton_rejouer.png"/>
				</Button.Background>
			</Button>

			<Button x:Name="bouton_reparation" Content="" Canvas.Left="831" Canvas.Top="64" Height="50" Width="116" HorizontalAlignment="Left" VerticalAlignment="Center" Click="bouton_reparation_Click">
				<Button.Background>
					<ImageBrush ImageSource="/images/bouton_reparation.png"/>
				</Button.Background>
			</Button>

            <Button x:Name="bouton_bouclier" Content="" Canvas.Left="732" Canvas.Top="58" Height="62" Width="68" HorizontalAlignment="Center" VerticalAlignment="Top" Click="bouton_bouclier_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/images/image_bouclier.png"/>
                </Button.Background>
            </Button>

            <Button x:Name="bouton_eteindre" Content="" Canvas.Left="231" Canvas.Top="210" Height="77" Width="238" Click="bouton_eteindre_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/images/bouton_eteindre.png"/>
                </Button.Background>
            </Button>
            <Label x:Name="label_timer_froid" Content="alimenter avant : 10s" Canvas.Left="49" Canvas.Top="44" Height="38" Width="167" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" FontSize="14"/>
            <Label x:Name="label_vies" Content="Vies restantes : " Canvas.Left="537" Canvas.Top="58" Height="62" Width="187" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White"/>
            <Label x:Name="label_buches" Content="" Canvas.Left="150" Canvas.Top="174" Foreground="White" Height="37" Width="39" FontSize="18"/>


		</Canvas>


	</Grid>
</Window>
