<UserControl x:Class="Jeu_ChateauAmbulant.UCParam"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Jeu_ChateauAmbulant"
             mc:Ignorable="d" Width="1600" Height="900">
	<Canvas>
		<Slider x:Name="sliderSon" HorizontalAlignment="Center" VerticalAlignment="Top" Width="344" Canvas.Left="628" Canvas.Top="301" Height="96" RenderTransformOrigin="0.5,0.5"
		Maximum="1"
		Minimum="0"
		Value="0.4"
		TickFrequency="0.1"
		IsSnapToTickEnabled="True"
		>
			<Slider.RenderTransform>
				<TransformGroup>

					<ScaleTransform ScaleY="-1"/>
					<SkewTransform/>
					<RotateTransform/>
					<TranslateTransform/>
				</TransformGroup>
			</Slider.RenderTransform>
		</Slider>
		<TextBox Text="{Binding ElementName=sliderSon, Path=Value, UpdateSourceTrigger=PropertyChanged}" DockPanel.Dock="Right" TextAlignment="Right" Width="124" Canvas.Left="977" Canvas.Top="365" Height="48" />
		<Button Content="" HorizontalAlignment="Center" VerticalAlignment="Top" Height="100" Width="230" Canvas.Left="685" Canvas.Top="519" Click="Button_Click">
			<Button.Background>
				<ImageBrush ImageSource="/Gemini_Generated_Image_4c8qsm4c8qsm4c8q.png"/>
			</Button.Background>
		</Button>
		<Button x:Name="butRetour" Content="" HorizontalAlignment="Left" Margin="48,55,0,0" VerticalAlignment="Top" Height="122" Width="304" RenderTransformOrigin="0.168,0.123">
			<Button.Background>
				<ImageBrush ImageSource="/butRetour.png"/>
			</Button.Background>
		</Button>
		<Image Height="244" Canvas.Left="566" Source="/images/texteSlider.png" Stretch="Fill" Width="468" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Top="116"/>
		
	</Canvas>
</UserControl>
